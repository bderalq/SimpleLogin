@model User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<form asp-action="Login" asp-controller="Accounts" method="post">
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td><label asp-for="Name" class="font-weight-bold"></label></td>
                        <td>
                            <input asp-for="Name" class="form-control" placeholder="Enter Username" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                
                    <tr>
                        <td><label asp-for="Password" class="font-weight-bold"></label></td>
                        <td>
                            <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </td>
                    </tr>
                  
                    <tr>
                        <td colspan="2" class="text-center">
                            <input type="submit" class="btn btn-outline-success btn-lg" value="Save" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</form>
